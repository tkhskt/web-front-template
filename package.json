{
  "name": "web-front-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:server": "browser-sync start -s dist -w src/*.html src/css/*.css src/js/*.js",
    "compile:css2cssprefix": "postcss dist/css/style.css -u autoprefixer -o dist/css/style.css",
    "compile:scss2css": "sass src/scss/style.scss:dist/css/style.css --style=expanded --source-map-urls=relative",
    "compile:scss2cssprefix": "run-s compile:scss2css compile:css2cssprefix",
    "watch:scss2cssprefix": "chokidar \"src/scss/\" --command \"npm run compile:scss2cssprefix\" --initial",
    "compile:js": "webpack --mode production",
    "watch:js": "webpack  --mode development --watch",
    "watch:img": "chokidar \"src/img/**/*\" --command \"node imagemin.mjs --experimental-modules\" --initial",
    "watch:html": "chokidar \"src/index.html\" --initial",
    "delete:dist": "rimraf dist",
    "copy:html": "cpx \"src/index.html\" dist/",
    "copy:ress": "cpx \"src/scss/ress.css\" dist/css/",
    "copy:sitemapxml": "cpx \"src/sitemap.xml\" dist/",
    "copy:robotstxt": "cpx \"src/robots.txt\" dist/",
    "copy:humanstxt": "cpx \"src/humans.txt\" dist/",
    "copy:manifestjson": "cpx \"src/manifest.json\" dist/",
    "copy:faviconico": "cpx \"src/favicon.ico\" dist/",
    "copy:apple-touch-iconpng": "cpx \"src/apple-touch-icon.png\" dist/",
    "prewatch:all": "run-s delete:dist copy:html copy:ress copy:sitemapxml copy:robotstxt copy:humanstxt copy:manifestjson copy:faviconico copy:apple-touch-iconpng",
    "watch:all": "run-p watch:html watch:scss2cssprefix watch:js watch:img start:server",
    "lint:scss": "stylelint \"**/*.scss\"",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "min:css":"cleancss -o dist/css/style.css dist/css/style.css",
    "min:js": "uglifyjs dist/js/bundle.js -o dist/js/bundle.js",
    "delete:map":"rimraf dist/**/*.map",
    "prepare:all":"run-p min:js min:css delete:map"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.7",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.5.2",
    "cpx": "^1.5.0",
    "imagemin-cli": "^7.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "stylelint": "^14.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.1.0",
    "uglify-es": "^3.3.9",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  }
}
